rm -R classes-examples-tmp
mkdir classes-examples-tmp
rm -R classes-examples
mkdir classes-examples

echo Using WTK_HOME=${WTK_HOME}

PREVERIFY=${WTK_HOME}/bin/preverify
CLDCAPI=${WTK_HOME}/lib/cldcapi11.jar
MIDPAPI=${WTK_HOME}/lib/midpapi20.jar

APPNAME=CavernsOfFireMidlet
MANIFESTNAME=manifests/manifest_midp_cavernsoffire

javac -bootclasspath ${CLDCAPI}:${MIDPAPI} -source 1.3 -target 1.3 -classpath classes-midp examples/CavernsOfFire.java -d classes-examples-tmp

${PREVERIFY} -classpath ${CLDCAPI}:${MIDPAPI}:classes-midp -d classes-examples  classes-examples-tmp


mkdir classes-examples/examples/gfx
cp examples/caverns_of_fire.tbl classes-examples/examples/
cp examples/gfx/ballbullet-tr.gif classes-examples/examples/gfx/
cp examples/gfx/iceblock-16.gif classes-examples/examples/gfx/
cp examples/gfx/cavewalls.gif classes-examples/examples/gfx/
cp examples/gfx/cavetile1-sm.jpg classes-examples/examples/gfx/
cp examples/gfx/cavetile2-sm.jpg classes-examples/examples/gfx/
cp examples/gfx/cavetile3-sm.jpg classes-examples/examples/gfx/
cp examples/gfx/cavetile4-sm.jpg classes-examples/examples/gfx/
cp examples/gfx/firecavernsprites.gif classes-examples/examples/gfx/

echo "Jaring preverified class files..."
jar cmf ${MANIFESTNAME} ${APPNAME}.jar -C classes-examples examples -C classes-midp jgame

echo "Update MIDlet-Jar-Size in jad..."

stat -c '%s' ${APPNAME}.jar | xargs echo 'MIDlet-Jar-Size:' | \
        cat ${MANIFESTNAME} /dev/stdin >${APPNAME}.jad

